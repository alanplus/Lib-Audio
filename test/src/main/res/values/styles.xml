<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 动画样式4 （帧动画） 播放句子  带loading-->
    <style name="AudioViewStyle4">
        <item name="audio_type">audio_type_net</item>
        <item name="default_backgroud">@mipmap/icon_word_detail_play</item>
        <item name="anim">@drawable/anim_play_sound</item>
        <item name="loading_drawable">@drawable/icon_audio_loading</item>
        <item name="anim_type">type_bg</item>
    </style>

</resources>
